#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

export EDITOR="nvim"
export VISUAL="nvim"

alias ls='exa'
alias ll='exa -La'
alias la='exa -a'

alias cat='bat'
alias pacman='sudo pacman'

alias grep='grep --color=auto'

PATH="$PATH:$HOME/.cargo/bin"

PS1='[\u@\h \W]\$ '

eval "$(starship init bash)"
