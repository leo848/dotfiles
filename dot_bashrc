#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

export EDITOR="nvim"
export VISUAL="nvim"

alias ls='exa'
alias la='exa -a'
alias ll='exa --long -a'

alias cat='bat'
alias pacman='sudo pacman'

alias che='chezmoi'

alias grep='grep --color=auto'

PATH="$PATH:$HOME/.cargo/bin"

PS1='[\u@\h \W]\$ '

eval "$(starship init bash)"
